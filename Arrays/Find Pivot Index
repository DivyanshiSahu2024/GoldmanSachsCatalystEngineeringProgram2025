class Solution {

  // Function to find the minimum value required to balance the array.

  public int minValueToBalance(List<Integer> arr) {

    // code here

    int n=arr.size();

    int sumLeft=0;

    int sumRight=0;

     

    for(int i=0;i<n/2;i++){

      sumLeft+=arr.get(i);

    }

    for(int i=n/2;i<n;i++){

      sumRight+=arr.get(i);

    }

    return Math.abs(sumRight-sumLeft);

  }

}
